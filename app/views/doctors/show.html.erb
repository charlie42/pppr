<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @doctor.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @doctor.username %>
</p>

<p>
  <strong>Password:</strong>
  <%= @doctor.password %>
</p>

<p>
  <strong>Password conformation:</strong>
  <%= @doctor.password_conformation %>
</p>

<p>
  <strong>Specialization:</strong>
  <%= @doctor.specialization %>
</p>

<% if @doctor.patients.any? %>
      <h3>Patients (<%= @doctor.patients.count %>)</h3>
      <ol class="patients">
        <%= render @patients %>
      </ol>
<% else %>
      <h3>No Patients </h3>
<% end %>
