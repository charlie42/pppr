<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @patient.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @patient.age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @patient.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birthday) %>:</strong></dt>
  <dd><%= @patient.birthday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:surname) %>:</strong></dt>
  <dd><%= @patient.surname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:second_name) %>:</strong></dt>
  <dd><%= @patient.second_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @patient.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registration_address) %>:</strong></dt>
  <dd><%= @patient.registration_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @patient.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:work_phone) %>:</strong></dt>
  <dd><%= @patient.work_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disability) %>:</strong></dt>
  <dd><%= @patient.disability %></dd>
  <dt><strong><%= model_class.human_attribute_name(:work_place) %>:</strong></dt>
  <dd><%= @patient.work_place %></dd>
  <dt><strong><%= model_class.human_attribute_name(:work_position) %>:</strong></dt>
  <dd><%= @patient.work_position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dependant) %>:</strong></dt>
  <dd><%= @patient.dependant %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area) %>:</strong></dt>
  <dd><%= @patient.area %></dd>
  <dt><strong><%= model_class.human_attribute_name(:insurance_policy_series) %>:</strong></dt>
  <dd><%= @patient.insurance_policy_series %></dd>
  <dt><strong><%= model_class.human_attribute_name(:insurance_policy_number) %>:</strong></dt>
  <dd><%= @patient.insurance_policy_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:social_benefit_code) %>:</strong></dt>
  <dd><%= @patient.social_benefit_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_series) %>:</strong></dt>
  <dd><%= @patient.document_series %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_number) %>:</strong></dt>
  <dd><%= @patient.document_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:martial_status) %>:</strong></dt>
  <dd><%= @patient.martial_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:education) %>:</strong></dt>
  <dd><%= @patient.education %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employment) %>:</strong></dt>
  <dd><%= @patient.employment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disability_time) %>:</strong></dt>
  <dd><%= @patient.disability_time %></dd>
