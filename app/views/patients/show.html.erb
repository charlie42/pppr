  <dd><%= @patient.blood_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Rh_factor) %>:</strong></dt>
  <dd><%= @patient.Rh_factor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:insurance_company) %>:</strong></dt>
  <dd><%= @patient.insurance_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_name) %>:</strong></dt>
  <dd><%= @patient.document_name.each.first %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allergy) %>:</strong></dt>
  <dd><% @patient.allergy.each do |a| %> <%= a %> <br> <% end %> </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              doctor_patients_path(@doctor), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_doctor_patient_path(@doctor, @patient), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              doctor_patient_path(@doctor, @patient),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
