<div class="field">
  <%= f.attribute_fields do |a| %>
    <%= a.attribute_select({ associations: []},{:class => "form-control"}) %>
  <% end %>
  <%= f.predicate_select({},{:class => "form-control"}) %>
  <%= f.value_fields do |v| %>
    <%= v.text_field :value,{:class => "form-control"} %>
  <% end %>
  <%= link_to "Сбросить", '#', class: "remove_fields" %>
</div>
