<%= f.label "Лечение", :class => 'control-label col-lg-2' %>
<div class="col-lg-10">

  <div class="form-group nested-fields well">

    <%= f.hidden_field :_destroy, :class => 'removable' %>
    <%= f.label "Фактор", :class => 'control-label ' %>
    <%= f.collection_select(:treatment_factor_id, TreatmentFactor.all, :id, :name, {}, {:multiple => false, :class => 'form-control'}) %>

    <br>
    <%= f.label "Дополнительно", :class => 'control-label ' %>
    <%= f.text_field :details, :class => 'form-control' %>
    <%= f.label "Количество", :class => 'control-label' %>
    <%= f.text_field :amount, :class => 'form-control' %>
    <%= link_to_remove_association " Удалить ", f, :class => 'control-label' %>
  </div>
</div>
