<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', :default => "Регистрация") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        Название компании
        <%= f.text_field :company_name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        ОГРН (13 цифр)
        <%= f.text_field :company_code, class: "form-control" %>
      </div>
      <div class="form-group">
        Адрес компании
        <%= f.text_field :company_address, class: "form-control" %>
      </div>
      <div class="form-group">
        Электронный адрес (для восстановления пароля)
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        Пароль (минимум 8 знаков)
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        Подтверждение пароля
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <%= f.submit t('.sign_up', :default => "Зарегистрироваться"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
